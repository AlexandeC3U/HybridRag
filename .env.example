INFLUXDB_TOKEN=change_me_to_secure_token_32_chars_long

# =============================================================================
# MQTT CONFIGURATION
# =============================================================================
MQTT_PORT=1883
MQTT_WS_PORT=9001

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=uns_secure_password_2024
GRAFANA_PORT=3000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
API_LOG_LEVEL=info

# =============================================================================
# SIMULATION CONFIGURATION
# =============================================================================
SIMULATION_INTERVAL=5
SIMULATION_ENABLED=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret for API authentication (generate with: openssl rand -hex 64)
JWT_SECRET=change_me_to_secure_jwt_secret_64_chars_long

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7