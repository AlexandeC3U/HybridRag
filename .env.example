# UNS Graph PoC Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
PROJECT_NAME=uns-graph-poc
ENVIRONMENT=development

# =============================================================================
# NEO4J CONFIGURATION
# =============================================================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=uns_secure_password_2024
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# =============================================================================
# INFLUXDB CONFIGURATION
# =============================================================================
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=uns_secure_password_2024
INFLUXDB_PORT=8086
INFLUXDB_ORG=UNS_Organization
INFLUXDB_BUCKET=sensor_data
INFLUXDB_RETENTION=30d
